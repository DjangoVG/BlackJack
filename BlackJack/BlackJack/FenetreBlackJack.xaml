                        <Button.Background>
                            <ImageBrush ImageSource="/Images/Jetons/Jeton50.png"/>
                        </Button.Background>
                    </Button>
                    <Button Height="100" Width="100" BorderBrush="{x:Null}" Margin="5,0,15,0" Style="{DynamicResource Bouton100}">
