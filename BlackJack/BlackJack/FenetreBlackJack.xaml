                <StackPanel x:Name="SPDate" HorizontalAlignment="Right" Orientation="Horizontal">
                    <Label Content="{Binding Date}" FontSize="25px" Foreground="White" FontFamily="Microsoft PhagsPa"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
