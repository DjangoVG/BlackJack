<Window x:Class="BlackJack.FenetreBlackJack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack"
        mc:Ignorable="d"
        Title="FenetreBlackJack" Height="930" Width="1400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="FondVert.jpeg"/>
        </Grid.Background>
        <Menu Height="20" Margin="0,0,0,10" Background="DarkGray" VerticalAlignment="Top">
            <MenuItem x:Name="MenuFile" Header="Profil">
                <MenuItem x:Name="ConnectBouton" Header="Se connecter" />
                <MenuItem x:Name="DisconnectBouton" Header="Se deconnecter" />
                <Separator />
                <MenuItem x:Name="MenuArgent" Header="Argent">
                    <MenuItem x:Name="BoutonRetirer" Header="Retirer" Click="ClickBoutonRetirer" />
                    <MenuItem x:Name="BoutonDeposer" Header="Déposer" Click="ClickBoutonDeposer" />
                </MenuItem>
                <Separator />
                <MenuItem x:Name="MenuExit" Header="Quitter l'application" Click="MenuExitClick" />
            </MenuItem>
            <MenuItem x:Name="MenuOption" Header="Options">
            </MenuItem>
        </Menu>
        <DockPanel>
            <GroupBox x:Name="BoxCroupier" Header="{Binding Path=DealerBoxHeader, UpdateSourceTrigger=PropertyChanged}" Margin="30,50,30,30" DockPanel.Dock="Top" MinHeight="250">
                <UniformGrid>
                    <Label Content="Croupier" Margin="0,0,-660,-121" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Copperplate Gothic Bold" FontSize="150" Foreground="DarkGray" Opacity="0.3"/>
                    <ItemsControl Name="dealerCardsItemControl" ItemsSource="{Binding Path=DealerCardsList}" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border>
                                    <Image />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </UniformGrid>
            </GroupBox>

            <GroupBox x:Name="BoxJoueur" Header="{Binding Path=PlayerBoxHeader, UpdateSourceTrigger=PropertyChanged}" Margin="30,30,30,30" DockPanel.Dock="Top" MinHeight="250" Height="208">
                <UniformGrid>
                    <Label x:Name="LabelPseudoJoueur" Content="{Binding Path=NomJoueur}" Margin="0,0,-660,-121" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Copperplate Gothic Bold" FontSize="150" Foreground="DarkGray" Opacity="0.3"/>
                    <ItemsControl x:Name="playerCardsItemControl" ItemsSource="{Binding PlayerCardsList}" Margin="0,0,0,10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border >
                                    <Image/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </UniformGrid>
            </GroupBox>

            <Grid Height="100" VerticalAlignment="Top" Margin="50,10,0,0" Width="459" Grid.Row="1" HorizontalAlignment="Left">
                <Button Height="100" Width="100" Margin="0,0,359,0" BorderBrush="{x:Null}" Foreground="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="BoutonTirer.png"/>
                    </Button.Background>
                </Button>
                <Button Height="100" Width="100" Margin="116,0,243,0" BorderBrush="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="BoutonRester.png"/>
                    </Button.Background>
                </Button>
                <Button Height="100" Width="100" Margin="234,0,125,0" BorderBrush="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="BoutonSplit.png"/>
                    </Button.Background>
                </Button>
                <Button Height="100" Width="100" Margin="349,0,10,0" BorderBrush="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="BoutonDouble.png"/>
                    </Button.Background>
                </Button>

            </Grid>

            <Grid Height="100" VerticalAlignment="Top" Margin="0,10,50,0" Width="580" Grid.Row="1" HorizontalAlignment="Right">
                <Button Height="100" Width="100" Margin="0,0,480,0" BorderBrush="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="Jeton5.png"/>
                    </Button.Background>
                </Button>
                <Button Height="100" Width="100" Margin="118,0,362,0" BorderBrush="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="Jeton10.png"/>
                    </Button.Background>
                </Button>
                <Button Height="100" Width="100" Margin="234,0,246,0" BorderBrush="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="Jeton50.png"/>
                    </Button.Background>
                </Button>
                <Button Height="100" Width="100" Margin="352,0,128,0" BorderBrush="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="Jeton100.png"/>
                    </Button.Background>
                </Button>
                <Button Height="100" Width="100" Margin="470,0,10,0" BorderBrush="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="Jeton200.png"/>
                    </Button.Background>
                </Button>
            </Grid>

        </DockPanel>
        <Rectangle HorizontalAlignment="Left" Height="56" Margin="0,93,0,0" Grid.Row="1" VerticalAlignment="Top" Width="1392" Fill="#FF424242" Opacity="0.7"/>
        <Label Content="Solde :"  Margin="11,101,1289,0" Grid.Row="1" VerticalAlignment="Top" Height="46" FontSize="25px" Foreground="White" FontFamily="Microsoft PhagsPa"/>
        <Label x:Name="LabelSolde" Height="46" Margin="103,101,1145,2" Grid.Row="1" FontSize="25px" Foreground="White" FontFamily="Microsoft PhagsPa"></Label>
        <Label Content="Mise actuelle :"  Margin="247,101,977,0" Grid.Row="1" VerticalAlignment="Top" Height="46" FontSize="25px" Foreground="White" FontFamily="Microsoft PhagsPa"/>
        <Label x:Name="LabelMiseActuelle" Height="46" Margin="415,101,833,2" Grid.Row="1" FontSize="25px" Foreground="White" FontFamily="Microsoft PhagsPa"/>
        <Label x:Name="LabelDate" Margin="1060,101,10,10" Grid.Row="1" FontSize="25px" Foreground="White" FontFamily="Microsoft PhagsPa"/>
    </Grid>
</Window>
