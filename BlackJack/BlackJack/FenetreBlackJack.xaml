                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,30,0">
                    <Button Height="100" Width="100" BorderBrush="{x:Null}" Margin="5,0,15,0" Style="{DynamicResource Bouton5}">
                        <Button.Background>
                            <ImageBrush ImageSource="/Images/Jetons/Jeton5.png"/>
