                            <ImageBrush ImageSource="/Images/Jetons/Jeton100.png"/>
                        </Button.Background>
                    </Button>
                    <Button Height="100" Width="100" BorderBrush="{x:Null}" Margin="5,0,15,0" Style="{DynamicResource Bouton200}">
                        <Button.Background>
                            <ImageBrush ImageSource="/Images/Jetons/Jeton200.png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
            </Grid>
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Orientation="Horizontal" Margin="30">
                <Button Height="83" Width="208" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="15,0,15,0" Style="{DynamicResource BoutonMiser}" >
                    <Button.Background>
                        <ImageBrush ImageSource="/Images/Autres/BoutonMiser.png"/>
                    </Button.Background>
                </Button>
                <Button Height="83" Width="208" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="30,0,15,0" Style="{DynamicResource BoutonReset}" >
